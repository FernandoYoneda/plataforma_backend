// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  role     String  // 'solicitante' | 'responsavel' | 'solicitante_ti' | 'responsavel_ti'
}

model Settings {
  id          Int    @id
  sector      String
  nameOrStore String
}

model Order {
  id          Int      @id @default(autoincrement())
  item        String
  quantity    Int      @default(1)          // ✅ valor padrão
  sector      String
  nameOrStore String
  status      String   @default("aberto")
  response    String?
  obs         String?
  createdAt   DateTime @default(now())
}


model TiTicket {
  id          Int      @id @default(autoincrement())
  title       String
  description String?
  sector      String
  nameOrStore String
  status      String   @default("aberto")      // 'aberto' | 'em_andamento' | 'finalizado'
  response    String?                           // feedback do responsável de TI
  createdAt   DateTime @default(now())
}
