// prisma/schema.prisma
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id       Int    @id @default(autoincrement())
  email    String @unique
  password String
  role     String
}

model Settings {
  id          Int    @id
  sector      String
  nameOrStore String
}

model Order {
  id              Int     @id @default(autoincrement())
  item            String
  qty             Int
  notes           String?
  sector          String?
  nameOrStore     String?
  requesterEmail  String?
  requesterName   String?
  requesterSector String?

  status   String  @default("aberto")
  response String?
  done     Boolean @default(false)

  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @db.Timestamptz(6)
}

model TiTicket {
  id              Int     @id @default(autoincrement())
  title           String
  description     String
  sector          String?
  nameOrStore     String?
  requesterEmail  String?
  requesterName   String?
  requesterSector String?

  status   String  @default("aberto")
  response String?
  done     Boolean @default(false)

  createdAt DateTime @default(now()) @db.Timestamptz(6)
  updatedAt DateTime @updatedAt @db.Timestamptz(6)
}
